<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_apache"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_medium"
            android:text="@string/apachehttpclient"
            tools:context=".MainActivity" />

        <Button
            android:id="@+id/bt_google"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_medium"
            android:text="@string/googlehttpclient"
            tools:context=".MainActivity" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_apachestatus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_medium"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="@string/apachestatus"
            tools:context=".MainActivity" />

        <TextView
            android:id="@+id/tv_googlestatus"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="@dimen/padding_medium"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="@string/googlestatus"
            tools:context=".MainActivity" />
    </LinearLayout>

</LinearLayout>